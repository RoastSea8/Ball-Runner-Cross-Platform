<Ball>:
    size: 100, 100
    pos : 20, 150
    canvas:
        Color:
            rgba: 1, 1, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size

<Obstacle>:
    id: _ball
    size: 160,320
    pos : 1700, 150
    canvas:
        Color:
            rgba: 0, 0, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Background>:
    id: _background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            texture: self.grass_texture

<BallRunner>:
    background: _background
    obstacle: _obstacle
    ball: _ball
    Background:
        id: _background
    Obstacle:
        id: _obstacle
    Ball:
        id: _ball
